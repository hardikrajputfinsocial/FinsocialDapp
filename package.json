{
  "name": "finsocial-app",
  "version": "1.0.0",
  "description": "Finsocial - Cryptocurrency Trading Platform",
  "scripts": {
    "frontend": "cd FinsocialDapp && npx next dev",
    "backend": "cd backend && python -m uvicorn api.login_api:app --reload --port 8000",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "install-all": "npm install && cd FinsocialDapp && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.8.0",
    "ethers": "^6.14.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
